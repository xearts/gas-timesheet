{
  "name": "GasTimesheet",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --fix src/**/*.ts",
    "test": "jest",
    "build": "npm run lint && npm run test && rimraf dist && webpack && cpx src/appsscript.json dist",
    "deploy": "npm run build && clasp push",
    "postinstall": "[ -f .env ] || cp .env.sample .env"
  },
  "dependencies": {
    "@types/node": "^10.3.2",
    "@types/node-polyglot": "^0.4.31",
    "bottlejs": "^1.7.1",
    "dayjs": "^1.6.9",
    "lodash": "^4.17.10",
    "node-polyglot": "^2.2.2"
  },
  "devDependencies": {
    "@google/clasp": "^1.3.2",
    "@types/google-apps-script": "^0.0.23",
    "@types/jest": "^23.0.1",
    "cpx": "^1.5.0",
    "dotenv": "^6.0.0",
    "gas-webpack-plugin": "^0.3.0",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3",
    "webpack-dotenv-plugin": "^2.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/.+(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
